package selfProgramming;

public class StringConcetenation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("We present the following facts for your"+ " extracurricular edification:");
		System.out.println();
		System.out.println("Letters in the Hawaiian alphabet:12");
		System.out.println("Dialing code for Malaysia: " +60);
		System.out.println("Year in which Leonardo da Vinci invented " + "the parachute: " + 1515);
		// The string concatenation operator (+) can used to append string-string & string-number.
	}	
}
